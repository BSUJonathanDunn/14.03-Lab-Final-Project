extends layout
block extraCSS
  link(rel="stylesheet", href="/stylesheets/index.css")
block extraJS
  script(src='/javascripts/landing.js', defer)
block content
  //-----SLIDESHOW MANUAL CONTROL BUTTONS---------
  div.manual_promo_button#left_button(
    role='button'
    tabindex='0'
    aria-label='Previous Slide'
  )
  div.manual_promo_button#right_button(
    role='button'
    tabindex='0'
    aria-label='Next Slide'
  )
  //------SLIDESHOW CONTAINER-----------
  main.promo_container(aria-live='polite')
    article.promo.promo_left
      img(src='/images/donuts/sample.png' alt='Slide One Promo Image')
      div.promo_text
        div.saffron_line
        h2 Delicious Donuts Every Morning!
        span.badge Special Offer
        p Come enjoy our freshly made donuts. Buy 2, get 1 free.

    article.promo.promo_right
      div.promo_text
        div.saffron_line
        h2 Cozy Coffee, Freshly Brewed
        span.badge Happy Hour 20% Off
        p Pair your favorite donut with our gourmet coffee.
      img(src='/images/donuts/sample.png' alt='Slide Two Promo Image')
